{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-console": "error", // Enforce no raw logs
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ]
}